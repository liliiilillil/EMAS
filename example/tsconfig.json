{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2018",
    "noImplicitAny": false,
    "noImplicitThis": false,
    "sourceMap": true,
    "lib": ["es7", "dom"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "allowJs": true,
    "baseUrl": "./",
    "jsx": "react",
    "paths": {
      "components/*": ["src/*"],
    }
  },
  "include": [
    "node_modules/@terminus/octopus-core",
    "node_modules/@terminus/octopus-shared",
    "node_modules/@terminus/octopus-adapter-alipay",
    "src",
    "ios",
    "android"
  ]
}
